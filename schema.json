{
    "schema": {
        "type": "object",
        "title": "Album",
        "properties": {
            "images": {
                "title": "Images",
                "type" : "array",
                "minItems": 0,
                "maxItems": 2,
                "items": {
                    "title" : "image",
                    "type" : "object",
                    "properties": {
                        "token" : {
                            "title": "token",
                            "type" : "string"
                        },
                        "extension" : {
                            "title" : "Extension",
                            "type" : "string",
                            "allowed-extensions": ["jpg", "jpeg", "png"]
                        },
                        "size" : {
                            "title" : "Size",
                            "type" : "number",
                            "max-size" : 338311
                        }
                    },
                    "required" : [
                        "token"
                    ]
                }
            }
        },
        "required": [
            "images"
        ]
      },
    "form": [
        {
            "key" : "images",
            "type" : "files",
            "items" : [
                {
                    "key" : "images[].token"
                },
                {
                    "key" : "images[].extension"
                },
                {
                    "key" : "images[].size"
                }
            ],
            "required" : [
                "token"
            ]
        },
        {
          "type": "submit",
          "style": "btn-info",
          "title": "OK"
        }
    ]
}